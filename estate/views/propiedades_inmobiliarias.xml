<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="view_propiedades_inmobiliarias_tree" model="ir.ui.view">
        <field name="name">propiedades.inmobiliarias.tree</field>
        <field name="model">propiedades.inmobiliarias</field>
        <field name="arch" type="xml">
            <tree string="Propiedades">
                <field name="name"/>
                <field name="codigo_postal"/>
                <field name="fecha_disponibilidad"/>
                <field name="precio_esperado"/>
                <field name="precio_venta"/>
            </tree>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_propiedades_inmobiliarias" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="res_model">propiedades.inmobiliarias</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
